    <script>
        let cprInterval;
        let timeLeft = 120;
        let shockCount = 0;
        let cycleCount = 0;

        function formatTime() {
            const now = new Date();
            return now.getHours().toString().padStart(2, '0') + ":" + 
                   now.getMinutes().toString().padStart(2, '0') + ":" + 
                   now.getSeconds().toString().padStart(2, '0');
        }

        function logEvent(msg, isShock = false) {
            const logBox = document.getElementById('event-log');
            if (logBox.innerText.includes("ç­‰å¾…å•Ÿå‹•")) logBox.innerHTML = "";
            const div = document.createElement('div');
            div.className = 'log-entry' + (isShock ? ' log-shock' : '');
            div.innerHTML = `<span class="timestamp">${formatTime()}</span> <span>${msg}</span>`;
            logBox.prepend(div);
        }

        function initACLS() {
            document.getElementById('start-screen').style.display = 'none';
            document.getElementById('main-ui').style.display = 'block';
            logEvent("ğŸ›‘ æ€¥æ•‘é–‹å§‹ (Pulseless)");
            startNewCycle();
        }

        function startNewCycle() {
            cycleCount++;
            timeLeft = 120;
            clearInterval(cprInterval);
            updateTimerDisplay();
            
            cprInterval = setInterval(() => {
                timeLeft--;
                updateTimerDisplay();
                if (timeLeft <= 0) {
                    clearInterval(cprInterval);
                    document.getElementById('check-modal').style.display = 'flex';
                }
            }, 1000);
            logEvent(`â±ï¸ ç¬¬ ${cycleCount} å€‹ 2åˆ†é˜ CPR å¾ªç’°é–‹å§‹`);
        }

        // è™•ç†éé›»æ“Šç¯€å¾‹
        function recordRhythmAndStart(rhythm) {
            logEvent(`ğŸ” ç¯€å¾‹åˆ†æ: ${rhythm}`);
            document.getElementById('check-modal').style.display = 'none';
            startNewCycle();
        }

        // é–‹å•Ÿé›»æ“Šé¸æ“‡è¦–çª—
        function openShockModal() {
            document.getElementById('check-modal').style.display = 'none';
            document.getElementById('shock-modal').style.display = 'flex';
        }

        function closeShockModal() {
            document.getElementById('shock-modal').style.display = 'none';
        }

        // åŸ·è¡Œé›»æ“Šä¸¦è¨˜éŒ„
        function executeShock(rhythm) {
            shockCount++;
            logEvent(`âš¡ ç¬¬ ${shockCount} æ¬¡é›»æ“Š (ç¯€å¾‹: ${rhythm})`, true);
            closeShockModal();
            startNewCycle(); // é›»æ“Šå¾Œç«‹å³é‡å•Ÿ 2 åˆ†é˜è¨ˆæ™‚
        }

        function updateTimerDisplay() {
            const mins = Math.floor(timeLeft / 60);
            const secs = timeLeft % 60;
            document.getElementById('cpr-timer').innerText = 
                `${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
        }

        function recordMed(name, dose) {
            logEvent(`ğŸ’‰ çµ¦è—¥: ${name} (${dose})`);
        }

        function recordAction(action) {
            logEvent(`ğŸ› ï¸ åŸ·è¡Œæ“ä½œ: ${action}`);
        }

        function resetManual() {
            if(confirm("ç¢ºå®šè¦æ‰‹å‹•é‡ç½® 2 åˆ†é˜è¨ˆæ™‚å—ï¼Ÿ")) { startNewCycle(); }
        }

        function recordROSC() {
            clearInterval(cprInterval);
            logEvent("ğŸŒŸ [ROSC] æ¢å¾©è‡ªç™¼å¾ªç’°ï¼åœæ­¢è¨ˆæ™‚ã€‚");
            alert("å·²è¨˜éŒ„ ROSCã€‚");
        }
    </script>
